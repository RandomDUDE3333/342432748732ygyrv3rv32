	credits.Position = UDim2.new(1, text.TextBounds.X, .5, -20)
	text.Position = UDim2.new(1, text.TextBounds.X, .5, 15)
	create_tween(BlurFX, 1, { Size = 32 })
	create_tween(main_window, 1, { Size = UDim2.new(0, 400, 0, 400) }).Completed:Wait()
	logo.Size = UDim2.new(0, 400, 0, 400)
	create_tween(logo, 2, { Size = UDim2.new(0, 200, 0, 200), Rotation = 360 })
	create_tween(credits, 2, { Position = UDim2.new(.632, 0, .5, -20) })
	create_tween(text, 2, { Position = UDim2.new(.72, 0, .5, 15) })
