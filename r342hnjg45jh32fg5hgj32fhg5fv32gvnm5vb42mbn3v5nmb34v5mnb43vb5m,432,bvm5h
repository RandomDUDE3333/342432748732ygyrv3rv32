	task.wait(2)
	create_tween(credits, 1, { TextTransparency = 1 })
	create_tween(text, 1, { TextTransparency = 1 })
	create_tween(BlurFX, 1, { Size = 0 })
	create_tween(logo, 1, { ImageTransparency = 1 }).Completed:Wait()
	main_window:Destroy()
	BlurFX:Destroy()
